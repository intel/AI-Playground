{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "YourAppID",
  "asar": true,
  "copyright": "Copyright Â© Intel. All rights reserved",
  "extraResources": [
    {
      "from": "../service",
      "to": "service",
      "filter": [
        "**/*",
        "!models/",
        "!.vscode/",
        "!__pycache__/",
        "!test/",
        "!db/",
        "!cache/",
        "!static/",
        "!temp/",
        "!dist/",
        "*.bat"
      ]
    },
    {
      "from": "../backend-shared",
      "to": "backend-shared",
      "filter": ["!__pycache__/"]
    },
    {
      "from": "../LlamaCPP",
      "to": "LlamaCPP",
      "filter": ["!__pycache__/"]
    },
    {
      "from": "../OpenVINO",
      "to": "OpenVINO",
      "filter": ["!__pycache__/", "!.cache/", "!db/", "!llm_cache*/**", "!emb_model_cache/"]
    },
    {
      "from": "external/workflows",
      "to": "workflows"
    },
    {
      "from": "../device-service",
      "to": "device-service"
    },
    {
      "from": "../service/models/stable_diffusion/ESRGAN",
      "to": "service/models/stable_diffusion/ESRGAN"
    },
    {
      "from": "../service/models/stable_diffusion/preview",
      "to": "service/models/stable_diffusion/preview"
    },
    {
      "from": "../build/resources/7zr.exe",
      "to": "7zr.exe"
    },
    {
      "from": "../build/resources/prototype-python-env.7z",
      "to": "prototype-python-env.7z"
    },
    {
      "from": "external/backend-versions.json",
      "to": "backend-versions.json"
    },
    {
      "from": "external/models.json",
      "to": "models.json"
    },
    {
      "from": "external/model_config.json",
      "to": "model_config.json"
    },
    {
      "from": "build/settings.json",
      "to": "settings.json"
    },
    {
      "from": "../service/static/assets/",
      "to": "service/static/assets/"
    },
    {
      "from": "../3rdpartynoticeslicenses.txt",
      "to": "3rdpartynoticeslicenses.txt"
    },
    {
      "from": "external",
      "to": ".",
      "filter": ["*.whl"]
    }
  ],
  "productName": "AI Playground",
  "directories": {
    "app": ".",
    "output": "../build/electron",
    "buildResources": "build"
  },
  "files": [
    {
      "from": "../build/dist",
      "to": "dist"
    },
    {
      "from": ".",
      "to": ".",
      "filter": ["package.json"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker",
    "icon": "app.ico",
    "artifactName": "${productName}-${version}.${ext}",
    "electronLanguages": ["en-US", "zh-CN"]
  },
  "nsis": {
    "license": "build/license.rtf",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "allowElevation": true
  }
}
