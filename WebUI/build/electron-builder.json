{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "YourAppID",
  "asar": true,
  "copyright": "Copyright Â© Intel. All rights reserved",
  "extraResources": [
    {
      "from": "external/service",
      "to": "service",
      "filter": [
        "**/*",
        "!.vscode",
        "!__pycache__",
        "!test",
        "!db",
        "!cache",
        "!static",
        "!temp",
        "!models",
        "!dist",
        "*.bat"
      ]
    },
    {
      "from": "external/ultra_env.7z",
      "to": "ultra_env.7z"
    },
    {
      "from": "external/model_config.json",
      "to": "model_config.json"
    },
    {
      "from": "external/models",
      "to": "service/models"
    },
    {
      "from": "external/service/static/assets/",
      "to": "service/static/assets/"
    }
  ],
  "productName": "AI Playground",
  "directories": {
    "output": "../release"
  },
  "files": ["dist", "dist-electron"],
  "mac": {
    "target": ["dmg"],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker",
    "icon": "app.ico",
    "artifactName": "${productName}-${version}-Release.${ext}",
    "electronLanguages":["en-US"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  },
  "linux": {
    "target": ["AppImage"],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  }
}
